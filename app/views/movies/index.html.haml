-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :id => "ratings_form", :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, session[:ratings].include?("#{rating}"), :id => "ratings_#{rating}"
  = submit_tag 'Refresh', :id => "ratings_submit"

%table#movies
  %thead
    %tr
      %th{:class => session[:title_class], :id => "title_head"}= link_to 'Movie Title', movies_path(:sort => "title")
      %th Rating
      %th{:class => session[:release_date_class], :id => "release_date_head"}= link_to 'Release Date', movies_path(:sort => "release_date")
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
