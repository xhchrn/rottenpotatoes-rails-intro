-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{@hilite == "title" ? {:class => "hilite"} : {}}= link_to 'Movie Title', movies_path(:sort => "title"), :id => "title_head"
      %th Rating
      %th{@hilite == "release_date" ? {:class => "hilite"} : {}}= link_to 'Release Date', movies_path(:sort => "release_date"), :id => "release_date_head"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
